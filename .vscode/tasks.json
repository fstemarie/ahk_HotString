{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build executable",
            "type": "process",
            "command": "C:/Program Files/AutoHotkey/Compiler/Ahk2Exe.exe",
            "args": [
                "/in", "${workspaceFolder}/src/HotStrings.ahk",
                "/out", "${workspaceFolder}/dist/HotStrings.exe"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Deploy to OneDrive",
            "type": "process",
            "command": "rclone",
            "args": [
                "sync",
                "src",
                "hotstrings:",
                "--exclude",
                "HotStrings.ini"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Deploy to Local",
            "type": "process",
            "command": "rclone",
            "args": [
                "sync",
                "src",
                "D:/applications/HotStrings",
                "--exclude",
                "HotStrings.ini"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "none",
            "problemMatcher": []
        }
    ]
}
