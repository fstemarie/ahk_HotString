{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy to OneDrive",
            "type": "process",
            "command": "rclone",
            "args": [
                "sync",
                "HotStrings",
                "hotstrings:",
                "--exclude",
                "HotStrings.ini",
            ],
            "presentation": {
                "reveal": "silent"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Deploy to Local",
            "type": "process",
            "command": "rclone",
            "args": [
                "sync",
                "HotStrings",
                "D:/applications/HotStrings",
                "--exclude",
                "HotStrings.ini",
            ],
            "presentation": {
                "reveal": "silent"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "none",
            "problemMatcher": []
        }
    ]
}
